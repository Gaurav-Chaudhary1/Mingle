<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Background color for the video message -->

    <!-- Define rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional stroke around the video message -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Light gray border -->

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
