<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- "Not Interested" Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/notInterested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/roboto"
        android:icon="@drawable/not_interested"
        android:text="Not Interested"
        android:textColor="#df3343"
        android:textSize="18sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/gray" />

    <!-- "Block" Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/blockAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/roboto"
        android:icon="@drawable/block"
        android:text="Block"
        android:textColor="#df3343"
        android:textSize="18sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:iconGravity="start"
        app:iconPadding="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/gray" />

    <!-- "Report" Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reportAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/roboto"
        android:icon="@drawable/report"
        android:text="Report"
        android:textColor="#df3343"
        android:textSize="18sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:iconGravity="start"
        app:iconPadding="12dp" />

</LinearLayout>
