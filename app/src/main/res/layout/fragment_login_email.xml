<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authfragment.LoginEmailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="14dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in with email address"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginTop="86dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            app:boxCornerRadiusTopEnd="16.90dp"
            app:boxCornerRadiusBottomEnd="16.90dp"
            app:boxCornerRadiusBottomStart="16.90dp"
            app:boxCornerRadiusTopStart="16.90dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_email_24"
                android:hint="Email address"
                android:drawablePadding="9.10dp"
                android:textColor="@color/black"
                android:drawableTint="@color/black"
                android:id="@+id/login_with_email"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxCornerRadiusTopEnd="16.90dp"
            app:boxCornerRadiusBottomEnd="16.90dp"
            app:boxCornerRadiusBottomStart="16.90dp"
            app:boxCornerRadiusTopStart="16.90dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_password_24"
                android:hint="Password"
                android:textColor="@color/black"
                android:drawablePadding="9.10dp"
                android:drawableTint="@color/black"
                android:inputType="textPassword"
                android:id="@+id/login_with_password">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_forget_password"
            android:text="Forget password ?"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:text="Log In"
            android:textStyle="bold"
            android:backgroundTint="#DF3343"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="24dp"
            android:textColor="@color/button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>