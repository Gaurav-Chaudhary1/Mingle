<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.AddFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="16dp">

       <ImageView
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_marginStart="14dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:id="@+id/add_image_post"
           android:src="@drawable/add_image"/>

       <TextView
           android:id="@+id/tv_add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/poppins"
           android:text="Add Post"
           android:textColor="@color/black"
           android:textSize="19.00sp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.22"
           app:layout_constraintStart_toStartOf="@id/add_image_post"
           app:layout_constraintTop_toTopOf="@id/add_image_post" />

   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/add_video_post"
            android:src="@drawable/add_video"/>

        <TextView
            android:id="@+id/tv_add_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Add Shorts"
            android:textColor="@color/black"
            android:textSize="19.00sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintStart_toStartOf="@id/add_video_post"
            app:layout_constraintTop_toTopOf="@id/add_video_post" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>